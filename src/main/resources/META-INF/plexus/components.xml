<component-set>
  <components>
    <component>
      <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
      <role-hint>grails-app</role-hint>
      <implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
      <configuration>
        <extension>war</extension>
        <type>grails-app</type>
        <packaging>grails-app</packaging>
        <language>java</language>
        <addedToClasspath>false</addedToClasspath>
      </configuration>
    </component>

    <component>
      <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
      <role-hint>grails-plugin</role-hint>
      <implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
      <configuration>
        <extension>zip</extension>
        <type>grails-plugin</type>
        <packaging>grails-plugin</packaging>
        <language>java</language>
        <addedToClasspath>true</addedToClasspath>
      </configuration>
    </component>

    <component>
      <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
      <role-hint>grails-app</role-hint>
      <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
      <configuration>
        <lifecycles>
          <lifecycle>
            <id>default</id>
            <phases>
              <validate>org.grails.maven.plugin:grails-maven-plugin:validate</validate>
              <initialize>org.grails.maven.plugin:grails-maven-plugin:init</initialize>
              <generate-sources>org.grails.maven.plugin:grails-maven-plugin:config-directories</generate-sources>
              <compile>org.grails.maven.plugin:grails-maven-plugin:maven-compile</compile>
              <test>org.grails.maven.plugin:grails-maven-plugin:maven-test</test>
              <package>org.grails.maven.plugin:grails-maven-plugin:maven-grails-app-war</package>
              <integration-test>org.grails.maven.plugin:grails-maven-plugin:maven-functional-test</integration-test>
              <install>org.apache.maven.plugins:maven-install-plugin:install</install>
              <deploy>org.apache.maven.plugins:maven-deploy-plugin:deploy</deploy>
            </phases>
          </lifecycle>
          <lifecycle>
            <id>clean</id>
            <phases>
              <clean>
                org.apache.maven.plugins:maven-clean-plugin:clean,
                org.grails.maven.plugin:grails-maven-plugin:clean
              </clean>
            </phases>
          </lifecycle>
        </lifecycles>
      </configuration>
    </component>

    <component>
      <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
      <role-hint>grails-plugin</role-hint>
      <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
      <configuration>
        <lifecycles>
          <lifecycle>
            <id>default</id>
            <phases>
              <validate>org.grails.maven.plugin:grails-maven-plugin:validate-plugin</validate>
              <initialize>org.grails.maven.plugin:grails-maven-plugin:init-plugin</initialize>
              <generate-sources>org.grails.maven.plugin:grails-maven-plugin:config-directories</generate-sources>
              <compile>org.grails.maven.plugin:grails-maven-plugin:maven-compile</compile>
              <test>org.grails.maven.plugin:grails-maven-plugin:maven-test</test>
              <package>org.grails.maven.plugin:grails-maven-plugin:package-plugin</package>
              <install>org.apache.maven.plugins:maven-install-plugin:install</install>
              <deploy>org.apache.maven.plugins:maven-deploy-plugin:deploy</deploy>
            </phases>
          </lifecycle>
          <lifecycle>
            <id>clean</id>
            <phases>
              <clean>
                org.apache.maven.plugins:maven-clean-plugin:clean,
                org.grails.maven.plugin:grails-maven-plugin:clean
              </clean>
            </phases>
          </lifecycle>
        </lifecycles>
      </configuration>
    </component>
  </components>
</component-set>
